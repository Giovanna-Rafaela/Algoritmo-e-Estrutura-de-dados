#include <stdio.h>

// Função principal
int main() {
    int tamanho;
    printf("Digite o tamanho da matriz identidade: ");
    scanf("%d", &tamanho);

    // Gera e imprime a matriz identidade
    printf("Matriz identidade de tamanho %d:\n", tamanho);
    for (int i = 0; i < tamanho; i++) {
        for (int j = 0; j < tamanho; j++) {
            if (i == j) {
                printf("1 ");
            } else {
                printf("0 ");
            }
        }
        printf("\n");
    }

    return 0;
}
